<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    @*Cookie For Login*@
    @{
        string userName = HttpContext.Current.Request.Cookies["UserInfo"]?["UserName"];
        string userId = HttpContext.Current.Request.Cookies["UserInfo"]?["UserId"];
        string userType = HttpContext.Current.Request.Cookies["UserInfo"]?["UserType"];
        string helloUser = "";
        if (Convert.ToInt32(userId) > 0)
        {
            helloUser = "Hi, " + userName;
        }        
    }
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hospital Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Convert.ToInt32(userType) == 1)
            {
                <div>
                    <ul class="nav navbar-nav menu cf">
                        <li>
                            <a href="">User</a>
                            <ul class=" nav navbar-nav submenu ">
                                <li>
                                    <a href="/Users/Management">Management</a>
                                </li>
                                <li>
                                    <a href="/Users/Doctor">Doctor</a>
                                </li>
                                <li>
                                    <a href="/Users/Patient">Patient</a>
                                </li>
                                <li>
                                    <a href="/Users/Index">User List</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="">Test</a>
                            <ul class=" nav navbar-nav submenu ">
                                <li>
                                    <a href="/Tests/Create">Add Test</a>
                                </li>
                                <li>
                                    <a href="/Tests/SaveCategory">Add Category</a>
                                </li>
                                <li>
                                    <a href="/Tests/Index">Test List</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="">Appointment</a>
                            <ul class=" nav navbar-nav submenu ">
                                <li>
                                    <a href="/Tests/AddAppointment">Add Appointment</a>
                                </li>
                                <li>
                                    <a href="/Tests/AppointmentRequest">Appointment Request</a>
                                </li>
                                <li>
                                    <a href="/Tests/AppoinmentList">Appointment List</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Tests/PendingTests">Pending Tests</a>
                        </li>
                    </ul>
                </div>
            }
            @if (Convert.ToInt32(userType) == 2)
            {
                <div>
                    <ul class="nav navbar-nav menu cf">
                        <li>
                            <a href=""> Today's Appoinment</a>
                        </li>
                        <li>
                            <a href="">New Appoinment</a>
                        </li>
                        <li>
                            <a href="">OT Schedule</a>
                        </li>
                        <li>
                            <a href="">Patient's History</a>
                        </li>
                        <li>
                            <a href="">Setting</a>
                        </li>
                        <li>
                            <a href="/Tests/PendingTests">Tests Assign</a>
                        </li>
                    </ul>
                </div>

            }
            @if (Convert.ToInt32(userType) == 3)
            {
                <div>
                    <ul class="nav navbar-nav menu cf">
                        <li>
                            <a href="/Users/PatientDetails">Person Details</a>
                        </li>
                        <li>
                            <a href="">History</a>
                        </li>
                        <li>
                            <a href="">Appoinment Request</a>
                        </li>
                        <li>
                            <a href="/Tests/PendingTests">Pending Tests</a>
                        </li>
                    </ul>
                </div>
            }
            @*<div class=" pull-right ">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Log In", "UserLogin", "Home")</li>
                    </ul>
                </div>*@
            <div class=" pull-right top-right ">
                <ul class="nav navbar-nav">
                    <li class="navbar-link"> @helloUser</li>
                    <li class="navbar-link">@Html.ActionLink("Log Out ", "Logout", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <br />
            <br />
            <p align="center">
                &copy; @DateTime.Now.Year - Developed by Md. Nayeem Hossen.<br />
                Freelance Developer.<br />
                Email:<i> <u>nayeem.hossen@outlook.com.</u></i>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
