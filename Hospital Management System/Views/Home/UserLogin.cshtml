<h2>User Login</h2>
@using (Html.BeginForm("UserLogin", "Home", FormMethod.Post, new { id = "UserLogin" }))
{
	@Html.AntiForgeryToken()
<div class="form-horizontal">
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.Label("Name: ", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<input type="text" name="UserName" id="txtUserName" required class="form-control">
			@Html.ValidationMessage("", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		@Html.Label("Password:  ", htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			<input type="password" name="Password" id="txtPassword" required class="form-control">
			@Html.ValidationMessage("", new { @class = "text-danger" })
		</div>
	</div>	
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" id="submit" name="submit" value="Login" class="btn btn-primary" />
		</div>
	</div>
</div>
}
